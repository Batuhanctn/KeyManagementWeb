@{
    ViewData["Title"] = "Key Management System - Kayıt";
    Layout = null;
}

<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <style>
        body {
            min-height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
            background-color: #f8f9fa;
            margin: 0;
            font-family: 'Poppins', sans-serif;
        }

        .login-container {
            width: 100%;
            max-width: 400px;
            padding: 2rem;
            background: white;
            border-radius: 10px;
            box-shadow: 0 0 20px rgba(0,0,0,0.1);
        }

        .login-header {
            text-align: center;
            margin-bottom: 2rem;
        }

        .form-control {
            border: 1px solid #e4e6ef;
            padding: 0.75rem 1rem;
            height: auto;
            font-size: 1rem;
            border-radius: 6px;
            background-color: #f5f8fa;
            margin-bottom: 1rem;
        }

            .form-control:focus {
                border-color: #3699ff;
                background-color: #ffffff;
                box-shadow: 0 0 0 0.2rem rgba(54, 153, 255, 0.25);
            }

        .btn-primary {
            background-color: #3699ff;
            border-color: #3699ff;
            padding: 0.75rem;
            font-weight: 500;
            border-radius: 6px;
            width: 100%;
            margin-bottom: 1rem;
        }

            .btn-primary:hover {
                background-color: #187de4;
                border-color: #187de4;
            }

        .btn-secondary {
            background-color: #6c757d;
            border-color: #6c757d;
            padding: 0.75rem;
            font-weight: 500;
            border-radius: 6px;
            width: 100%;
        }

            .btn-secondary:hover {
                background-color: #5a6268;
                border-color: #545b62;
            }

        .theme-switch {
            position: fixed;
            top: 1rem;
            right: 1rem;
            display: flex;
            align-items: center;
            gap: 0.5rem;
            color: #6c757d;
        }

            .theme-switch .form-check-input {
                width: 3rem;
                height: 1.5rem;
                margin: 0;
                cursor: pointer;
            }

        .dark-mode {
            background-color: #1e1e2d;
            color: #ffffff;
        }

            .dark-mode .login-container {
                background-color: #2b2b40;
                box-shadow: 0 0 20px rgba(0,0,0,0.2);
            }

            .dark-mode .form-control {
                background-color: #1e1e2d;
                border-color: #323248;
                color: #ffffff;
            }

                .dark-mode .form-control:focus {
                    background-color: #171723;
                }

            .dark-mode .theme-switch {
                color: #ffffff;
            }

            .dark-mode .form-control::placeholder {
                color: #92929f;
            }

            .dark-mode h2 {
                color: #ffffff;
            }

            .dark-mode .alert-danger {
                background-color: #3a2434;
                border-color: #3a2434;
                color: #f64e60;
            }
    </style>
</head>
<body class="dark-mode">
    <div class="theme-switch">
        <span class="theme-label">Koyu Mod</span>
        <div class="form-check form-switch">
            <input class="form-check-input" type="checkbox" id="themeToggle" checked>
        </div>
    </div>

    <div class="login-container">
        <div class="login-header">
            <h2>Yeni Hesap Oluştur</h2>
        </div>

        <form asp-controller="Account" asp-action="Register" method="post">
            @if (TempData["Error"] != null)
            {
                <div class="alert alert-danger">
                    <i class="fas fa-exclamation-circle me-2"></i>@TempData["Error"]
                </div>
            }

            <div class="mb-3">
                <input type="text" class="form-control" name="username" placeholder="Kullanıcı Adı" required>
            </div>

            <div class="mb-3">
                <input type="email" class="form-control" name="email" placeholder="E-posta" required>
            </div>

            <div class="mb-3">
                <input type="password" class="form-control" name="password" placeholder="Şifre" required>
            </div>

            <div class="mb-3">
                <input type="password" class="form-control" name="ConfirmPassword" placeholder="Şifre Tekrar" required>
            </div>

            <button type="submit" class="btn btn-primary">Kayıt Ol</button>
            <a href="@Url.Action("Login", "Account")" class="btn btn-secondary">Giriş Yap</a>
        </form>
    </div>

    <script>
        const themeToggle = document.getElementById('themeToggle');
        const body = document.body;

        themeToggle.addEventListener('change', function() {
            if (this.checked) {
                body.classList.add('dark-mode');
                body.classList.remove('light-mode');
                localStorage.setItem('theme', 'dark');
            } else {
                body.classList.remove('dark-mode');
                body.classList.add('light-mode');
                localStorage.setItem('theme', 'light');
            }
        });

        // Sayfa yüklendiğinde tema tercihini kontrol et
        document.addEventListener('DOMContentLoaded', function() {
            const savedTheme = localStorage.getItem('theme') || 'dark';
            themeToggle.checked = savedTheme === 'dark';

            if (savedTheme === 'light') {
                body.classList.remove('dark-mode');
                body.classList.add('light-mode');
            }
        });
    </script>
</body>
</html>
