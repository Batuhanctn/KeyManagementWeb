@model IEnumerable<KeyManagementWeb.Models.Key>
@{
    ViewData["Title"] = "Ana Sayfa";
    var permissions = ViewBag.UserPermissions as string ?? "";
    Layout = null;
}

<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Key Management System</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    <style>
        body {
            min-height: 100vh;
            margin: 0;
            font-family: 'Poppins', sans-serif;
            background-color: #f8f9fa;
            transition: background-color 0.3s ease;
        }

        .card {
            background: white;
            border-radius: 10px;
            box-shadow: 0 0 20px rgba(0,0,0,0.1);
            overflow: hidden;
            transition: all 0.3s ease;
        }

        .table {
            margin-bottom: 0;
        }

        .table th {
            background-color: #f8f9fa;
            font-weight: 600;
            text-transform: uppercase;
            font-size: 0.85rem;
            padding: 1rem;
            border-bottom: 2px solid #e9ecef;
        }

        .table td {
            padding: 1rem;
            vertical-align: middle;
            max-width: 400px;
        }

        code {
            background-color: #e9ecef;
            color: #1f1f3a;
            padding: 0.5rem 1rem;
            border-radius: 4px;
            font-family: 'Courier New', monospace;
            font-size: 0.9rem;
            font-weight: 500;
            display: inline-block;
            width: 100%;
            white-space: nowrap;
            overflow: hidden;
            text-overflow: ellipsis;
            border: 1px solid #ced4da;
        }

        .dark-mode code {
            background-color: #2d2d50;
            color: #ffffff;
            border: 1px solid #3e3e6f;
        }

        .dark-mode code.bg-light {
            background-color: #1f1f3a !important;
            color: #ffffff !important;
            border: 1px solid #3e3e6f;
        }

        .dark-mode {
            background-color: #1a1a2e;
            color: #ffffff;
        }

        .dark-mode .card {
            background-color: #1f1f3a;
            box-shadow: 0 0 20px rgba(0,0,0,0.2);
        }

        .dark-mode .table {
            color: #ffffff;
        }

        .dark-mode .table th {
            background-color: #1f1f3a;
            border-bottom-color: #2d2d50;
            color: #b5b5c3;
        }

        .dark-mode .table td {
            border-bottom-color: #2d2d50;
            background-color: #1f1f3a;
            color: #ffffff;
        }

        .dark-mode .table tr:hover td {
            background-color: #2d2d50;
        }

        .dark-mode .modal-content {
            background-color: #1f1f3a;
            color: #ffffff;
        }

        .dark-mode .modal-header {
            border-bottom-color: #2d2d50;
        }

        .dark-mode .modal-footer {
            border-top-color: #2d2d50;
        }

        .dark-mode .form-control {
            background-color: #1a1a2e;
            border-color: #2d2d50;
            color: #ffffff;
        }

        .dark-mode .form-control:focus {
            background-color: #1a1a2e;
            border-color: #3e3e6f;
            color: #ffffff;
        }

        .dark-mode .form-select {
            background-color: #1a1a2e;
            border-color: #2d2d50;
            color: #ffffff;
        }

        .dark-mode .btn-close {
            filter: invert(1) grayscale(100%) brightness(200%);
        }

        .navbar {
            background-color: #1f1f3a;
            padding: 1rem;
            margin-bottom: 2rem;
        }

        .navbar-brand {
            color: #ffffff;
            font-size: 1.25rem;
            font-weight: 600;
            text-decoration: none;
        }

        .nav-link {
            color: #ffffff;
            text-decoration: none;
            padding: 0.5rem 1rem;
            border-radius: 6px;
            transition: all 0.3s ease;
        }

        .nav-link:hover, .nav-link.active {
            color: #ffffff;
            background-color: #2d2d50;
        }

        .badge {
            padding: 0.5rem 1rem;
            border-radius: 6px;
            font-weight: 500;
        }

        .btn-sm {
            padding: 0.4rem 0.8rem;
            font-size: 0.875rem;
        }

        .dark-mode .alert {
            background-color: #1f1f3a;
            border-color: #2d2d50;
        }

        .dark-mode .alert-danger {
            color: #ff6b6b;
            background-color: rgba(255, 107, 107, 0.1);
            border-color: rgba(255, 107, 107, 0.2);
        }

        .dark-mode .alert-success {
            color: #69db7c;
            background-color: rgba(105, 219, 124, 0.1);
            border-color: rgba(105, 219, 124, 0.2);
        }

        .dark-mode .alert-warning {
            color: #ffd43b;
            background-color: rgba(255, 212, 59, 0.1);
            border-color: rgba(255, 212, 59, 0.2);
        }

        .card-header {
            background-color: transparent !important;
            border-bottom: 1px solid #2d2d50;
        }

        .dark-mode .btn-primary {
            background-color: #4c4cff;
            border-color: #4c4cff;
        }

        .dark-mode .btn-primary:hover {
            background-color: #3a3aff;
            border-color: #3a3aff;
        }

        .dark-mode .btn-secondary {
            background-color: #2d2d50;
            border-color: #2d2d50;
        }

        .dark-mode .btn-secondary:hover {
            background-color: #3e3e6f;
            border-color: #3e3e6f;
        }

        .user-info {
            color: #ffffff;
            font-size: 0.875rem;
        }

        .user-info i {
            margin-right: 0.5rem;
        }
    </style>
</head>
<body class="dark-mode">
    <nav class="navbar">
        <div class="container d-flex justify-content-between align-items-center">
            <div class="d-flex align-items-center">
                <a class="navbar-brand" href="#">
                    <i class="fas fa-shield-alt me-2"></i>Key Management System
                </a>
                @if (User.Identity?.IsAuthenticated == true && User.Identity.Name != "admin")
                {
                    <div class="ms-4">
                        <a class="nav-link active" href="@Url.Action("Index", "Home")">
                            <i class="fas fa-key"></i>KMS
                        </a>
                    </div>
                    <div class="ms-2">
                        <a class="nav-link" href="@Url.Action("Index", "Decryption")">
                            <i class="fas fa-unlock"></i>Decryption
                        </a>
                    </div>
                    <div class="ms-2">
                        <a class="nav-link" href="@Url.Action("Index", "Encryption")">
                            <i class="fas fa-lock"></i>Encryption
                        </a>
                    </div>
                }
            </div>
            <div class="d-flex align-items-center">
                <div class="theme-switch me-4">
                    <button id="themeToggle" class="btn btn-outline-light">
                        <i class="fas fa-moon"></i>
                    </button>
                </div>
                @if (User.Identity?.IsAuthenticated == true)
                {
                    <div class="user-info me-3">
                        <i class="fas fa-user-circle"></i>@User.Identity.Name
                    </div>
                    <a href="@Url.Action("Logout", "Account")" class="btn btn-danger btn-sm">
                        <i class="fas fa-sign-out-alt me-2"></i>Çıkış Yap
                    </a>
                }
            </div>
        </div>
    </nav>

    <div class="container">
        @if (TempData["Error"] != null)
        {
            <div class="alert alert-danger mb-4">
                <i class="fas fa-exclamation-circle me-2"></i>@TempData["Error"]
            </div>
        }
        @if (TempData["Success"] != null)
        {
            <div class="alert alert-success mb-4">
                <i class="fas fa-check-circle me-2"></i>@TempData["Success"]
            </div>
        }
        @if (TempData["Warning"] != null)
        {
            <div class="alert alert-warning mb-4">
                <i class="fas fa-exclamation-triangle me-2"></i>@TempData["Warning"]
            </div>
        }

        @if (!string.IsNullOrEmpty(permissions))
        {
            <div class="card">
                <div class="card-header bg-transparent p-4 border-bottom">
                    <div class="d-flex justify-content-between align-items-center">
                        <h5 class="mb-0">Key Listesi</h5>
                        @if (permissions.Contains("U"))
                        {
                            <button class="btn btn-primary btn-sm" data-bs-toggle="modal" data-bs-target="#newKeyModal">
                                <i class="fas fa-plus me-2"></i>Yeni Key
                            </button>
                        }
                    </div>
                </div>
                <div class="table-responsive">
                    <table class="table table-hover mb-0">
                        <thead>
                            <tr>
                                <th>ID</th>
                                <th>Anahtar</th>
                                <th>Tip</th>
                                <th>Güncelleme Günü</th>
                                <th>Son Güncelleme</th>
                                <th>İşlemler</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>@item.KeyId</td>
                                    <td>
                                        <code class="bg-light px-2 py-1 rounded">@item.KeyValue</code>
                                    </td>
                                    <td>
                                        <span class="badge bg-info">@item.KeyType</span>
                                    </td>
                                    <td>@item.KeyUpdateDay Gün</td>
                                    <td>@item.LastUpdateDay.ToString("dd.MM.yyyy HH:mm")</td>
                                    <td>
                                        <div class="btn-group" role="group">
                                            @if (permissions.Contains("U"))
                                            {
                                                <a asp-action="UpdateKeyValue" asp-route-keyId="@item.KeyId" class="btn btn-warning btn-sm" title="Key Değerini Güncelle">
                                                    <i class="fas fa-pen"></i>
                                                </a>
                                            }
                                            @if (permissions.Contains("C"))
                                            {
                                                <button class="btn btn-info btn-sm" onclick="openUpdateDayModal(@item.KeyId, @item.KeyUpdateDay)" title="Güncelleme Gününü Değiştir">
                                                    <i class="fas fa-calendar"></i>
                                                </button>
                                            }
                                            @if (permissions.Contains("D"))
                                            {
                                                <form asp-action="DeleteKey" method="post" style="display: inline;" onsubmit="return confirm('Bu key\'i silmek istediğinizden emin misiniz?');">
                                                    <input type="hidden" name="keyId" value="@item.KeyId" />
                                                    <button type="submit" class="btn btn-danger btn-sm" title="Key'i Sil">
                                                        <i class="fas fa-trash"></i>
                                                    </button>
                                                </form>
                                            }
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        }
    </div>

    <!-- Güncelleme Günü Modal -->
    <div class="modal fade" id="updateDayModal" tabindex="-1">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Güncelleme Gününü Değiştir</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                <form asp-action="UpdateKeyUpdateDay" method="post">
                    <div class="modal-body">
                        <input type="hidden" id="updateDayKeyId" name="keyId" />
                        <div class="mb-3">
                            <label class="form-label">Yeni Güncelleme Günü</label>
                            <input type="number" id="newUpdateDay" name="newUpdateDay" class="form-control" required min="1" />
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">İptal</button>
                        <button type="submit" class="btn btn-primary">Kaydet</button>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <!-- Yeni Key Modal -->
    <div class="modal fade" id="newKeyModal" tabindex="-1">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Yeni Key Oluştur</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                <form asp-action="CreateNewKey" method="post">
                    <div class="modal-body">
                        <div class="mb-3">
                            <label class="form-label">Key Tipi</label>
                            <select name="keyType" class="form-select" required>
                                <option value="AES_KEY">AES Key</option>
                                <option value="DES_KEY">DES Key</option>
                            </select>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">İptal</button>
                        <button type="submit" class="btn btn-primary">Oluştur</button>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script>
        document.getElementById('themeToggle').addEventListener('click', function() {
            document.body.classList.toggle('light-mode');
            document.body.classList.toggle('dark-mode');
        });

        function openUpdateDayModal(keyId, currentDay) {
            document.getElementById('updateDayKeyId').value = keyId;
            document.getElementById('newUpdateDay').value = currentDay;
            var modal = new bootstrap.Modal(document.getElementById('updateDayModal'));
            modal.show();
        }

        // Otomatik kapanan alertler için
        setTimeout(function() {
            $('.alert').fadeOut('slow');
        }, 5000);
    </script>
</body>
</html>
